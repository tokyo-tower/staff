<%- include('./_step', {currentStepName: 'profile'}) %>


<h1 class="pagetitle"><%- __('EditProfile') %></h1>

<p class="guidetext"><%= __('EnterProfileGuideText') %></p>

<form id="form_profile" method="post">

<% if (reservationModel.purchaserGroup === 'Staff') {
    // 代理予約
%>

    <table class="table table-profile table-profile-staff">
        <tbody>
            <tr class="tr-price">
                <th><label><%- __('TotalPrice') %></label></th>
                <td>
                    <p><span class="price">&yen;<%- numeral(reservationModel.getTotalCharge()).format('0,0') %></span></p>
                </td>
            </tr>
            <tr class="tr-payment">
                <th>お支払い方法<span class="requiredmark"></span></th>
                <td>
                    <div class="wrapper-payment form-inline">
                        <%
                            const paymentMethods = conf.get('paymentMethodsForStaff');
                            Object.keys(paymentMethods).forEach((methodCode) => { %>
                            <label for="radio_payment_method<%- methodCode %>" class="form-group payment">
                                <input type="radio" id="radio_payment_method<%- methodCode %>" name="paymentMethod" class="form-control" value="<%- methodCode %>"<% if (paymentMethod === methodCode ) { %> checked="checked"<% } %>>
                                <%- paymentMethods[methodCode] %>
                                <div class="checkedbg"></div>
                            </label>
                        <% }) %>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>

<% } else {
    /* 一般予約
      CHEVREの仕様 = submit時にコントローラがバリデーションを行い、エラーがあったら翻訳済みエラーメッセージが validation に入って返ってくる
      (ここでのサーバ側のバリデーターは app/forms/reserve/reserveProfileForm )
      TTTSの仕様としてそれとは別に画面側でもバリデーションを行う。
      →翻訳がサーバーでしかできない仕様なので置換用の文字列を埋め込んでおいて使いまわす。
    */

    // 言語に合わせて国選択の表示順位を変更
    let preferred_countries = conf.get('preferred_countries_by_locale') || {};
    preferred_countries = (preferred_countries[locale]) ? JSON.stringify(preferred_countries[locale]) : '';
%>
    <script>
        window.ttts.errmsgLocales = {
            empty: "<%-__('NoInput{{fieldName}}', { fieldName: '{{fieldName}}' }) %>",
            invalid: "<%-__('Invalid{{fieldName}}', { fieldName: '{{fieldName}}' }) %>",
            match: "<%-__('Match{{fieldName}}', { fieldName: '{{fieldName}}' }) %>",
            maxLength: "<%-__('MaxLength{{fieldName}}{{max}}', { fieldName: '{{fieldName}}', max: '{{max}}' }) %>",
            cardtoken: "<%- __('CheckCreditInfo') %>",
            EmailConfirmInvalid: "<%- __('EmailConfirmInvalid') %>"
        };
        window.ttts.local = {
            address: '<%- address %>',
            tel: '<%- tel %>'
        };
        window.ttts.preferred_countries = '<%- preferred_countries %>';
    </script>

    <p class="description-required"><%- __('SpanContainedRequired') %></p>
    <table class="table table-profile table-profile-customer">
        <tbody>
            <tr class="tr-name">
                <th><%- __('NameInSpecifiedLetters') %><span class="requiredmark"></span></th>
                <td>
                    <div class="wrapper-names">
                        <div class="wrapper-nameinput wrapper-nameinput-lastname">
                            <label for="id_lastName"><%- __('LastName') %></label>
                            <input type="tel" name="lastName" id="id_lastName" class="form-control input-required" data-pattern="^[ァ-ロワヲンーa-zA-Z・\.\s　]*$" data-parentSelector=".wrapper-nameinput-lastname" data-fieldname="<%- __('LastName') %>" value="<%= lastName %>" required>
                            <p class="errmsg errmsg-lastName"><%- (validation && validation.lastName) ? validation.lastName.msg : '' %></p>
                        </div>
                        <div class="wrapper-nameinput wrapper-nameinput-firstname">
                            <label for="id_firstName"><%- __('FirstName') %></label>
                            <input type="text" name="firstName" id="id_firstName" class="form-control input-required" data-pattern="^[ァ-ロワヲンーa-zA-Z・\.\s　]*$" data-parentSelector=".wrapper-nameinput-firstname" data-fieldname="<%- __('FirstName') %>" value="<%= firstName %>" required>
                            <p class="errmsg errmsg-firstName"><%- (validation && validation.firstName) ? validation.firstName.msg : '' %></p>
                        </div>
                    </div>
                    <p class="notice">※<%- __('EnterInFullWidthKatakana') %></p>
                </td>
            </tr>

            <tr class="tr-email">
                <th><%- __('Email') %><span class="requiredmark"></span></th>
                <td>
                    <div class="wrapper-emailinput">
                        <input type="email" name="email" id="id_email" class="form-control input-required" data-pattern="^[a-zA-Z0-9@\.!#$%&'*+/=?^_`{|}~-]*@[a-zA-Z0-9@\.!#$%&'*+/=?^_`{|}~-]*$" data-parentSelector=".wrapper-emailinput" data-fieldname="<%- __('Email') %>" value="<%= email %>">
                    </div>
                    <p class="notice">※<%- __('RetypeToConfirm') %></p>
                    <div class="wrapper-emailconfirm">
                        <input type="text" name="emailConfirm" id="id_emailConfirm" class="form-control input-required input-emailconfirm" value="<%= emailConfirm %>" data-pattern="^[a-zA-Z0-9@\.!#$%&'*+/=?^_`{|}~-]*$" data-parentSelector=".wrapper-emailconfirm" data-fieldname="<%- __('EmailConfirm') %>">
                        <span>@</span>
                        <input type="text" name="emailConfirmDomain" id="id_emailConfirmDomain" class="form-control input-required input-emailconfirm" value="<%= emailConfirmDomain %>" data-pattern="^[a-zA-Z0-9@\.!#$%&'*+/=?^_`{|}~-]*$" data-parentSelector=".wrapper-emailconfirm" data-fieldname="<%- __('EmailConfirmDomain') %>">
                        <input type="hidden" id="input_emailconfirmconcat" class="input-required" name="emailconfirmconcat" data-parentSelector=".wrapper-emailconfirm" data-fieldname="<%- __('EmailConfirmInvalid') %>">
                    </div>
                    <p class="errmsg errmsg-email"><%- (validation && validation.email ? validation.email.msg : '') %></p>
                    <p class="errmsg errmsg-emailConfirm"><%- (validation && validation.emailConfirm ? validation.emailConfirm.msg : '') %></p>
                    <p class="errmsg errmsg-emailConfirmDomain"><%-  (validation && validation.emailConfirmDomain ? validation.emailConfirmDomain.msg : '') %></p>
                    <p class="errmsg errmsg-emailconfirmconcat"></p>
                    <p class="notice"><%- __('SettingForLimitingEmailReception') %></p>
                </td>
            </tr>

            <tr class="tr-tel <% (validation && validation.tel ? 'has-error' : '') %>">
                <th><label for="id_tel"><%- __('Tel') %></label><span class="requiredmark"></span></th>
                <td>
                    <input type="tel" name="tel" id="id_tel" class="form-control input-required" minlength="6" maxlength="15" data-pattern="^[0-9]{6,15}$" data-fieldname="<%- __('Tel') %>" value="<%= tel %>">
                    <label for="checkbox_otherregion">
                        <input type="checkbox" id="checkbox_otherregion">Other Area
                    </label>
                    <div id="wrapper_tel_otherregion">
                        <p>Enter your telephone number start with calling code (without "+" and "-")</p>
                        <input type="text" name="tel" id="input_tel_otherregion" class="form-control" minlength="4" maxlength="15" data-pattern="^[0-9]{4,15}$" data-fieldname="<%- __('Tel') %>" value="<%= tel %>" disabled="disabled">
                    </div>
                    <p class="errmsg errmsg-tel"><%- (validation && validation.tel ? validation.tel.msg : '') %></p>
                    <input type="hidden" name="address" id="input_country" value="<%- address %>">
                    <p class="notice">※<%- __('UseHalfWidthAlphanumericWithoutHyphens') %></p>
                </td>
            </tr>

            <tr class="tr-id_gender">
                <th><label for="id_gender"><%- __('Gender') %></label></th>
                <td>
                    <%
                    let genderChoices = [
                        {code: '', name: 'NotSelected'},
                        {code: '1', name: 'Male'},
                        {code: '2', name: 'Female'},
                    ];
                    %>
                    <select class="form-control" name="gender">
                        <option value="">---</option>
                        <% for (let choice of genderChoices) { %>
                        <option value="<%= choice.code %>"<% if (age === choice.code) { %> selected="selected"<% } %>><%- __(choice.name) %></option>
                        <% } %>
                    </select>
                </td>
            </tr>

            <tr class="tr-id_age">
                <th><label for="id_age"><%- __('Age') %></label></th>
                <td>
                    <%
                    let ageChoices = [
                        {code: '00', name: '~10'},
                        {code: '10', name: '10～14'},
                        {code: '15', name: '15～19'},
                        {code: '20', name: '20～24'},
                        {code: '25', name: '25～29'},
                        {code: '30', name: '30～34'},
                        {code: '35', name: '35～39'},
                        {code: '40', name: '40～44'},
                        {code: '45', name: '45～49'},
                        {code: '50', name: '50～54'},
                        {code: '55', name: '55～59'},
                        {code: '60', name: '60～64'},
                        {code: '65', name: '65～69'},
                        {code: '70', name: '70～74'},
                        {code: '75', name: '75～79'},
                        {code: '80', name: '80~'}
                    ];
                    %>
                    <select class="form-control" name="age">
                        <option value="">---</option>
                        <% for (let choice of ageChoices) { %>
                        <option value="<%= choice.code %>"<% if (age === choice.code) { %> selected="selected"<% } %>><%- choice.name %></option>
                        <% } %>
                    </select>
                </td>
            </tr>

            <tr class="tr-price">
                <th><label><%- __('TotalPrice') %></label></th>
                <td>  
                    <p><span class="price"><%- __('{{price}} yen', { price: numeral(reservationModel.getTotalCharge()).format('0,0') } ) %></span></p>
                </td>
            </tr>

            <tr class="tr-cardNumber <% (validation && validation.cardNumber ? 'has-error' : '') %>">
                <th><label for="cardNumber"><%- __('CardNumber') %></label><span class="requiredmark"></span></th>
                <td>
                    <input type="text" name="cardNumber" id="cardNumber" class="form-control input-required" value="" maxlength="16" data-pattern="^[0-9]+$" data-fieldname="<%- __('CardNumber') %>" required>
                    <p class="errmsg errmsg-cardNumber"><% (validation && validation.cardNumber ? validation.cardNumber.msg : '') %></p>
                    <p class="errmsg errmsg-gmoTransaction"><%- (typeof GMOERROR === 'string' ? GMOERROR : '') %></p>
                    <figure class="figure-availablecards"><img src="/images/common/available_credit_cards.png" alt="available credit cards"></figure>
                    <p><%- __('CreditAvailable') %></p>
                    <p class="notice"><%- __('CardNumberMessage') %></p>
                </td>
            </tr>

            <tr class="tr-holdername <% (validation && validation.holdername ? 'has-error' : '') %>">
                <th><label for="holdername"><%- __('CardHoldername') %></label><span class="requiredmark"></span></th>
                <td>
                    <input type="text" name="holdername" id="holdername" class="form-control input-required" value="" data-fieldname="<%- __('CardHoldername') %>" required>
                    <p class="errmsg errmsg-holdername"><% (validation && validation.holdername ? validation.holdername.msg : '') %></p>
                </td>
            </tr>

            <tr class="tr-expire <% (validation && validation.expire ? 'has-error' : '') %>">
                <th><label for="expire"><%- __('CardExpire') %></label><span class="requiredmark"></span></th>
                <td>
                    <select name="cardExpirationMonth" id="cardExpirationMonth" class="form-control select-cardexpire" required>
                        <option value="">--</option>
                        <%
                        for (let i = 0; i < 12; i++) {
                            let num = i + 1;
                            let month = (num < 10) ? '0' + String(num) : String(num);
                        %>
                            <option value="<%= month %>"><%= month %></option>
                        <% } %>
                    </select> <%- __('CardExpirationMonth') %> 
                    <select name="cardExpirationYear" id="cardExpirationYear" class="form-control select-cardexpire" required>
                        <option value="">--</option>
                        <%
                        let choices = {};
                        let year2digits = moment().format('YY');
                        for (let i = 0; i < 10; i++) {
                            let key = (parseInt(year2digits) + i).toString();
                            choices[key] = `20${key}`;
                        }
                        %>
                        <% for (let key in choices) { %>
                        <option value="20<%- key %>"><%- choices[key] %></option>
                        <% } %>
                    </select> <%- __('CardExpirationYear') %>
                    <input type="hidden" name="expire" id="expire" value="" class="input-required" data-fieldname="<%- __('CardExpire') %>" required>
                    <p class="errmsg errmsg-expire"><% (validation && validation.expire ? validation.expire.msg : '') %></p>
                </td>
            </tr>

            <tr class="tr-securitycode <% (validation && validation.securitycode ? 'has-error' : '') %>">
                <th><label for="securitycode"><%- __('Securitycode') %></label><span class="requiredmark"></span></th>
                <td>
                    <input type="text" name="securitycode" id="securitycode" class="form-control input-required" value="" maxlength="4" data-pattern="^[0-9]+$" data-fieldname="<%- __('Securitycode') %>" required>
                    <p class="errmsg errmsg-securitycode"><% (validation && validation.securitycode ? validation.securitycode.msg : '') %></p>
                    <p class="btn-securitycode" id="modalbtn_cardsecurirycode"><%- __('AboutSecuritycode') %></p>
                </td>
            </tr>
        </tbody>

    </table>
    <input type="hidden" name="gmoTokenObject" value="">
    <input style="display:none;" type="radio" name="paymentMethod" value="0" checked="checked">
    <script src="/js/lib/intl-tel-input/intlTelInput.min.js"></script>
<% } %>
</form>

<div class="modal fade" id="modal_cardsecurirycode" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<p class="btn-close" data-dismiss="modal"><span>×</span></p>
				<h2 class="modal-title"><%- __('AboutSecuritycode') %></h2>
				<p class="guidetext"><%- __('SecuritycodePositionGuide') %></p>
                <p name="error-message"></p>
			</div>
			<div class="modal-body">
                <h3><%- __('SecuritycodePositionMain') %></h3>
                <p><%- __('SecuritycodePositionTextMain') %></p>
                <figure><img src="/images/common/figure_securitycode_common.png" alt="VISA / MASTER / DINERS / JCB"></figure>
                <h3><%- __('SecuritycodePositionOther') %></h3>
                <p><%- __('SecuritycodePositionTextOther') %></p>
                <figure><img src="/images/common/figure_securitycode_amex.png" alt="AMEX"></figure>
			</div>
            <div class="modal-footer">
				<p class="btn btn-close" data-dismiss="modal"><span><%- __('Close') %></span></p>
            </div>
		</div>
	</div>
</div>
<script>
    $('#modalbtn_cardsecurirycode').click(function() {
        $('#modal_cardsecurirycode').modal();
    });
</script>

<script src="<%= GMO_ENDPOINT %>/ext/js/token.js"></script>
<script>Multipayment.init('<%= GMO_SHOP_ID %>');</script>
<script src="/js/profile.js"></script>
